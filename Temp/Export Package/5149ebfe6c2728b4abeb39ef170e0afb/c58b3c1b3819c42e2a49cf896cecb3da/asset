#ifndef PVREnum_h
#define PVREnum_h
#import <Foundation/Foundation.h>
/**
 *  手机设备类型
 *
 *  peiwen
 */
typedef NS_ENUM(NSInteger, PVRDeviceType) {
    /**
     *  未知设备
     */
    PVR_IPHONE_UNKNOWN = 0,
    /**
     *  IPHONE ES
     */
    PVR_IPHONE_ES = 1,
    /**
     *  iphone 6
     */
    PVR_IPHONE_6 = 2,
    /**
     *  iphone 6s
     */
    PVR_IPHONE_6S = 3,
    /**
     *  iphone 6p
     */
    PVR_IPHONE_6P = 4,
    /**
     *  iphone 6sp
     */
    PVR_IPHONE_6SP = 5
};

/**
 *  头盔设备类型
 *
 *  peiwen
 */
typedef NS_ENUM(NSInteger, PVRLensType) {
    /**
     *  无畸变的一组参数，未适配特定头盔
     */
    PVR_LENS_UNKNOWN = 0,
    /**
     *  三星GearVR2
     */
    PVR_LENS_SAMSUNG_GEARVR2 = 1,
    /**
     *  小鸟看看Pico 1
     */
    PVR_LENS_PICOVR_I = 2,
    /**
     *  三星GearVR1
     */
    PVR_LENS_SAMSUNG_GEARVR1 = 3,
    /**
     *  机饕1
     */
    PVR_LENS_ANTVR_JT1 = 4,
    /**
     *  暴风魔镜2
     */
    PVR_LENS_MOJING_2 = 5,
    /**
     *  暴风魔镜3
     */
    PVR_LENS_MOJING_3 = 6,
    /**
     *  暴风魔镜3
     */
    PVR_LENS_FALCON = 7,
    /**
     *   PICO 1S
     */
    PVR_LENS_PICO_1S = 8
};


/**
 *  眼类型
 *
 *  peiwen
 */
typedef NS_ENUM(NSInteger, PVREyeType) {
    /**
     *  左眼
     */
    PVR_EYE_LEFT = 0,
    /**
     *  右眼
     */
    PVR_EYE_RIGHT = 1,
    /**
     *  眼睛数量
     */
    PVR_EYE_COUNT = 2
};

#endif /* PVREnum_h */
